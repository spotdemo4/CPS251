<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="124dp"
            android:layout_marginRight="124dp"
            android:layout_marginBottom="96dp"
            android:text="@string/tofragatitle"
            app:layout_constraintBottom_toTopOf="@+id/frag2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="188dp"
            android:text="@string/tofragbtitle"
            app:layout_constraintStart_toStartOf="@+id/frag1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/frag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="124dp"
            android:layout_marginRight="124dp"
            android:text="@string/tofragctitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag2" />

        <ImageView
            android:id="@+id/imageA"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_marginTop="76dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/doge"
            app:layout_constraintEnd_toStartOf="@+id/frag1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageB"
            android:layout_width="75dp"
            android:layout_height="76dp"
            android:layout_marginTop="19dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/bluedoge"
            app:layout_constraintEnd_toStartOf="@+id/frag2"
            app:layout_constraintTop_toBottomOf="@+id/imageA" />

        <ImageView
            android:id="@+id/imageC"
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:layout_marginTop="13dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/breaddoge"
            app:layout_constraintEnd_toStartOf="@+id/frag3"
            app:layout_constraintTop_toBottomOf="@+id/imageB" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>